« <%= link_to 'Bands', bands_path %>
 « <%= link_to @album.band.name, band_path(@album.band) %>

<h1><i><%= @album.name %></i></h1>

<h3>Details:</h3>
  [<a href='<%= edit_album_url %>'>edit</a>]
  <ul>
    <!-- Band -->
    <li>Band: 
      <a href='<%= band_url(@album.band) %>'>
        <%= @album.band.name %>
      </a>
    </li>

    <!-- Studio/live -->
    <li>Recording type: <%= @album.recording_type %></li>
  </ul>

<h3>Tracks:</h3>
  [<a href='<%= new_track_url %>'>add</a>]
  <ul>
    <% @album.tracks.each do |track| %>
      <li><a href='<%= track_url(track) %>'><%= track.name %></a></li>
    <% end %>
  </ul>

<%= button_to "Delete album", album_path(@album), method: :delete %>